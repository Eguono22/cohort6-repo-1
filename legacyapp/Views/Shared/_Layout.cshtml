<!DOCTYPE html>
<html lang="en" style="height: 100%;">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Coils Technologies</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/legacyapp.styles.css" asp-append-version="true" />
</head>
<body style="min-height: 100%; display: flex; flex-direction: column;">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-cloud-fill"></i> COILS TECH
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Services" asp-action="Index">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Technologies" asp-action="Index">Technologies</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="About" asp-action="Index">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Contact" asp-action="Index">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main" style="padding-top: 76px; flex: 1 0 auto;">
        @RenderBody()
    </main>

    <footer class="footer bg-dark text-white py-5 mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold mb-3"><i class="bi bi-cloud-fill"></i> COILS TECH</h5>
                    <p>Empowering Growth through DevOps, Cloud Migration, Optimization, and Security Solutions.</p>
                    <div class="social-links mt-3">
                        <a href="https://facebook.com/coilstech" target="_blank" class="text-white me-3">
                            <i class="bi bi-facebook fs-4"></i>
                        </a>
                        <a href="https://twitter.com/coilstech" target="_blank" class="text-white me-3">
                            <i class="bi bi-twitter fs-4"></i>
                        </a>
                        <a href="https://instagram.com/coilstech" target="_blank" class="text-white">
                            <i class="bi bi-instagram fs-4"></i>
                        </a>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold mb-3">Useful Links</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Services" asp-action="Index" class="text-white-50 text-decoration-none">Services</a></li>
                        <li><a asp-controller="Technologies" asp-action="Index" class="text-white-50 text-decoration-none">Our Technologies</a></li>
                        <li><a asp-controller="About" asp-action="Index" class="text-white-50 text-decoration-none">About Us</a></li>
                        <li><a asp-controller="Contact" asp-action="Index" class="text-white-50 text-decoration-none">Contact Us</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy" class="text-white-50 text-decoration-none">Privacy Policy</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold mb-3">Contact Info</h5>
                    <p class="text-white-50">
                        <i class="bi bi-geo-alt-fill"></i> 979 Barkston Ln, Danville, Indiana USA<br>
                        <i class="bi bi-telephone-fill"></i> +1 (785) 871-7269<br>
                        <i class="bi bi-envelope-fill"></i> info@coils-web.com
                    </p>
                </div>
            </div>
            <hr class="bg-white-50">
            <div class="row">
                <div class="col text-center text-white-50">
                    <p class="mb-0">&copy; 2025 Coils Technologies. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
